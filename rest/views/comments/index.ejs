<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 15px;
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }

        .comment-details {
            flex-grow: 1;
        }

        .comment-text {
            margin-bottom: 5px;
        }

        .comment-username {
            color: #888;
        }

        .comment-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .comment-button:hover {
            background-color: #555;
        }

        .add-comment-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        .add-comment-button:hover {
            background-color: #555;
        }
    </style>
</head>

<body>
    <h1>Comments</h1>
    <ul>
        <% for(let comment of comments) { %>
            <li>
                <div class="comment-details">
                    <p class="comment-text">
                        <%= comment.text %>
                    </p>
                    <p class="comment-username">By: <%= comment.username %>
                    </p>
                </div>
                <div>
                    <a href="/comments/<%= comment.id %>" class="comment-button">Detail</a>
                    <a href="/comments/<%= comment.id %>/edit" class="comment-button">Edit</a>
                </div>
            </li>
            <% } %>
    </ul>
    <a href="/comments/create" class="add-comment-button">Add comment</a>
    <div id="add-comment-form" style="display: none;">
        <h2>Add Comment</h2>
        <form action="/comments" method="POST">
            <label for="comment-text">Comment:</label>
            <textarea id="comment-text" name="text" rows="4" cols="50"></textarea>
            <br>
            <label for="comment-username">Username:</label>
            <input type="text" id="comment-username" name="username">
            <br>
            <button type="submit">Submit</button>
        </form>
    </div>
    <script>
        const addCommentButton = document.querySelector('.add-comment-button');
        const addCommentForm = document.getElementById('add-comment-form');

        addCommentButton.addEventListener('click', () => {
            addCommentForm.style.display = 'block';
        });
    </script>
</body>

</html>